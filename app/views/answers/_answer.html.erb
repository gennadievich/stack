<div class="<%= 'answer' if true %>">

  <div class="answer-votes">
    Votes: <%= answer.rating %>
    <div><%= link_to 'up', vote_answer_up_path(answer.id) %> <%= link_to 'down', vote_answer_down_path(answer.id) %></div>
  </div>

  <div class="answer-body">
    <%= answer.body %>
  </div>

  <div class="answer-author">
    Author: <%= answer.user.email %>
  </div>

</div>
