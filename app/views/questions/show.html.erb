
<%= render partial: 'questions/show_question_partial', locals: {question: @question} %>


<div style="margin-top: 10px">
  <%= render text: 'Answers:' if @question.answers.count != 0  %>
</div>

<%= render @question.answers %>


<div style="margin-top: 30px">
    <% if current_user.nil? %>
      <%= render partial: 'layouts/login_register' %>
      <%else %>
    <%= render partial: 'answers/answer_form' %>
<% end %>

</div>